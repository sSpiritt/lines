<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_run_game"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.sarum.games.linesgame.RunGameActivity">

    <TextView
            android:id="@+id/textViewLinesSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lines size: -"
            android:textSize="24sp"
    />

    <SeekBar
            android:id="@+id/seekBarLinesSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:max="9"
            android:progress="5"
    />

    <TextView
            android:id="@+id/textViewGameSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Game speed: -"
            android:textSize="24sp"
    />

    <SeekBar
            android:id="@+id/seekBarGameSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:max="9"
            android:progress="5"
    />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8sp"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/colorText"
            android:background="@color/colorPrimary"
            android:text="Start"
            android:onClick="buttonStart"
    />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Players:"
            android:textStyle="bold"
            android:textSize="24sp"
    />

    <TextView
            android:id="@+id/textViewPlayer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="-"
            android:textSize="24sp"
    />

</LinearLayout>
